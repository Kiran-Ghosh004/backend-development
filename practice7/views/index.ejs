<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Note Form</title>
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body class="bg-gradient-to-br from-zinc-900 via-zinc-800 to-zinc-900 text-white flex items-center justify-center min-h-screen">

  <div class="w-full max-w-2xl bg-zinc-800/70 backdrop-blur-xl rounded-2xl shadow-2xl p-8 border border-zinc-700 hover:shadow-blue-900/40 transition duration-300">

    <h1 class="text-3xl font-semibold text-center mb-8 text-blue-400 tracking-wide uppercase">
      Note Form
    </h1>

    <!-- Form Section -->
    <form action="/create" method="post" class="flex flex-col space-y-4">
      <input type="text" name="title" placeholder="Enter your name"
        class="w-full px-4 py-2 rounded-lg border border-zinc-700 bg-zinc-900/70 focus:ring-2 focus:ring-blue-500 outline-none placeholder-gray-400 transition">

      <textarea placeholder="Type your note..." name="details"
        class="w-full px-4 py-2 h-28 rounded-lg border border-zinc-700 bg-zinc-900/70 focus:ring-2 focus:ring-blue-500 outline-none placeholder-gray-400 resize-none transition"></textarea>

      <button type="submit"
        class="w-full py-2 rounded-lg bg-blue-600 hover:bg-blue-700 active:scale-95 transition-all duration-200 font-semibold tracking-wide">
        Submit
      </button>
    </form>

    <!-- Tasks Section -->
    <div class="tasks mt-10">
      <h2 class="text-2xl font-semibold text-gray-300 mb-4 border-b border-zinc-700 pb-2">
        Saved Notes
      </h2>

      <% if(files.length > 0){ %>
        <% files.forEach(function(file){ %>
          <div
            class="task bg-zinc-900/80 border border-zinc-700 rounded-xl p-4 hover:border-blue-600 transition group hover:shadow-lg hover:shadow-blue-900/30 mb-4">
            <h3 class="text-lg font-semibold text-blue-400 mb-2 group-hover:text-blue-300 transition"><%= file.replace(".txt", "") %></h3>
            <div class="flex justify-between items-center">
              <a href="/file/<%= file.replace(".txt", "") %>" class="text-blue-500 hover:text-blue-400 text-sm transition">Read more â†’</a>
              
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <h3 class="text-zinc-500">no tasks</h3>
      <% } %>

    </div>

  </div>

</body>

</html>
