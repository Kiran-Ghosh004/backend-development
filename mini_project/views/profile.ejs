<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body class="bg-zinc-900 text-white min-h-screen">

    <!-- Top Bar -->
    <div class="w-full bg-zinc-800 p-4 flex justify-between items-center shadow-lg">
        <h1 class="text-xl font-semibold">Dashboard</h1>
        <a href="/logout" class="px-4 py-2 bg-red-600 hover:bg-red-700 rounded-lg text-sm transition">
            Logout
        </a>
    </div>

    <!-- Main Content -->
    <div class="max-w-3xl mx-auto mt-10 space-y-10">

        <!-- Greeting -->
        <div class="text-center">
            <h2 class="text-3xl font-bold">Hello, <%= user.name %> üëã</h2>
            <p class="text-gray-400 mt-2">Create a post and share your thoughts</p>
        </div>

        <!-- Create Post Form -->
        <div class="bg-zinc-800 p-6 rounded-2xl shadow-md">
            <h3 class="text-xl font-semibold mb-4">Create a new post</h3>

            <form action="/post" method="post" class="space-y-4">

                <input name="title" type="text" placeholder="Post title" required
                    class="w-full px-4 py-2 bg-zinc-700 text-white rounded-lg outline-none focus:ring-2 focus:ring-blue-500">

                <textarea name="content" rows="4" placeholder="What's on your mind?" required
                    class="w-full px-4 py-2 bg-zinc-700 text-white rounded-lg outline-none focus:ring-2 focus:ring-blue-500"></textarea>

                <button type="submit"
                    class="w-full py-2 bg-blue-600 hover:bg-blue-700 rounded-lg text-white transition">
                    Create Post
                </button>
            </form>
        </div>

        <!-- User Posts -->
        <!-- User Posts -->
        <div>
            <h3 class="text-2xl font-bold mb-4">Your Posts</h3>

            <div class="space-y-6">

                <% if (user.posts.length===0) { %>
                    <p class="text-gray-400 text-center">You haven‚Äôt created any posts yet.</p>
                    <% } %>

                        <% user.posts.forEach(post=> { %>
                            <div class="bg-zinc-800 p-6 rounded-2xl shadow-lg">

                                <h4 class="text-gray-300 text-sm">
                                    Posted by:
                                    <span class="text-white font-semibold">
                                        <%= user.username %>
                                    </span>
                                </h4>

                                <h3 class="text-xl font-bold mt-2">
                                    <%= post.title %>
                                </h3>

                                <p class="text-gray-300 mt-2">
                                    <%= post.content %>
                                </p>

                                <div class="flex items-center justify-between mt-4">

                                    <a href="/like/<%= post._id %>" class="text-blue-400 hover:underline text-sm">
                                        ‚ù§Ô∏è <%= post.likes?.length || 0 %> Likes
                                    </a>

                                    <div class="space-x-3">
                                        <a href="/edit/<%= post._id %>"
                                            class="px-4 py-1 bg-yellow-500 hover:bg-yellow-600 text-black font-medium rounded-lg text-sm">
                                            Edit
                                        </a>

                                        <a href="/delete/<%= post._id %>"
                                            class="px-4 py-1 bg-red-600 hover:bg-red-700 text-white rounded-lg text-sm">
                                            Delete
                                        </a>
                                    </div>

                                </div>
                            </div>
                            <% }) %>

            </div>
        </div>


    </div>

</body>

</html>