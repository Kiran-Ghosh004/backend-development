<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Users</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen bg-gray-900 text-white p-6">
    <div class="max-w-7xl mx-auto">
        <div class="flex justify-between items-center mb-8">
            <h1 class="text-3xl font-bold bg-gradient-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent">
                All Users
            </h1>
            <a href="/" class="px-4 py-2 bg-blue-600 hover:bg-blue-700 rounded-lg font-semibold shadow-md transition-all">
                Go Back
            </a>
        </div>

        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
            <% if (users && users.length > 0) { %>
                <% users.forEach(function(user){ %>
                    <div class="bg-gray-800 p-6 rounded-2xl shadow-lg hover:shadow-cyan-800/40 transition-all duration-300 flex flex-col justify-between">
                        <div>
                            <h2 class="text-xl font-bold mb-2 text-cyan-400"><%= user.name %></h2>
                            <p class="mb-1"><strong>Username:</strong> <%= user.username %></p>
                            <p class="mb-1"><strong>Email:</strong> <%= user.email %></p>
                            <p class="mb-1"><strong>Password:</strong> <%= user.password %></p>
                        </div>
                        <div class="mt-4 flex gap-2">
                            <form action="/update/<%= user._id %>" method="GET" class="flex-1">
                                <button type="submit" class="w-full py-2 bg-yellow-500 hover:bg-yellow-600 rounded-lg font-medium transition-all">
                                    Update
                                </button>
                            </form>
                            <form action="/delete/<%= user._id %>" method="POST" class="flex-1">
                                <button type="submit" class="w-full py-2 bg-red-600 hover:bg-red-700 rounded-lg font-medium transition-all">
                                    Delete
                                </button>
                            </form>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="col-span-full bg-gray-800 p-6 rounded-2xl text-center text-xl">
                    No users found.
                </div>
            <% } %>
        </div>
    </div>
</body>
</html>
